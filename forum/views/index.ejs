<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forum</title>
    <link rel="stylesheet" href="/forum/public/css/styles.css">
</head>
<body>
    <header>
        <nav>
            <div class="logo">
                <h1>E&E Forum</h1>
            </div>
            <ul class="nav-links">
                <li><a href="/dashboard.html">Dashboard</a></li>
                <li><a href="#">Market</a></li>
                <li><a href="/forum">Forum</a></li>
                <li><a href="#">Discover</a></li>
                <li><a href="/about.html">About</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <h2>Forum Posts</h2>
        <ul>
            <% posts.forEach(post => { %>
                <li>
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <p><em>by <%= post.author %></em></p>
                </li>
            <% }) %>
        </ul>
        <a href="/forum/new">Create a new post</a>
    </main>
</body>
</html>